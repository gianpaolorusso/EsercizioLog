<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.utente5academy.eserciziolog.PostActivity"
    android:layout_centerHorizontal="true">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerpost"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager=" android.support.v7.widget.LinearLayoutManager">

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:layout_marginBottom="50px"
        android:layout_marginRight="50px"
        android:layout_width="350px"
        android:layout_height="350px"
        android:id="@+id/floatingnutton"
        android:layout_alignBottom="@id/recyclerpost"
        android:layout_alignRight="@+id/recyclerpost"
        />
</RelativeLayout>
